{
  "name": "screenshot-action",
  "version": "1.0.0",
  "main": "screenshot.js",
  "scripts": {
    "lint:oxlint": "npx -y oxlint --fix",
    "lint:js-md": "npx -y prettier@3.5 --print-width 120 --write '**/*.js' '!**/*.min.js' '!dist/**' '**/*.md'",
    "lint:html": "npx -y js-beautify@1 '**/*.html' --type html --replace --indent-size 2 --max-preserve-newlines 1 --end-with-newline",
    "lint": "npm run lint:oxlint && npm run lint:js-md && npm run lint:html",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:e2e": "npx playwright install chromium && E2E=1 jest tests/screenshot.e2e.test.js --runInBand"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@fastify/static": "^8.2.0",
    "express": "^5.1.0",
    "fastify": "^5.4.0",
    "h3": "^1.15.4",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "playwright": "^1.54.2",
    "polka": "^0.5.2",
    "serve": "^14.2.0",
    "serve-static": "^2.2.0",
    "sharp": "^0.33.5",
    "sirv": "^3.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mock-spawn": "^0.2.6"
  }
}
